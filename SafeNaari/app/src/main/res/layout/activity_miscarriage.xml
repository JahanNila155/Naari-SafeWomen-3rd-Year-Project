<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".miscarriage"
    android:background="#fda4ba"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/mom"
                android:layout_gravity="center"
                />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="A miscarriage refers to the spontaneous loss of a pregnancy. This experience is very common – over 3 million people have them in the US every year.  It’s normal to feel mixed emotions after a miscarriage, from relief to sadness to shock, or even nothing at all. However you feel is okay."
                android:textColor="@color/black"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginBottom="20dp"

                >
                <LinearLayout
                    android:id="@+id/to"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"

                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/treatment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Treatment\noptions"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ec"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"

                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/emotional"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emotional\ncare"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>